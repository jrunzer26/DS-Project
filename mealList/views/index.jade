extends layout

block content
  #titleBar
    h1= title
  
  #information
    p Welcome to #{title}
    p Meal-to-List is a free service to find meals and send the ingredients into a Todoist shopping list.
    p Enter a food item below to get started.
  
  #searchBar
    label Search:
    input(type="text" id="SearchValue")
    input(type="submit" value="Search" id="SearchSubmit")

  #mealList
    #title
      h2= "Meal List"
    div(id="meals")
      div(class="row")
        
  #login
    h3="Todoist Login"
    label Email:
    input(type="text" id="email")
    br
    label Password:
    input(type="password" id="password")
    br
    label List Name
    input(type="text" id="ListName")
  br
  label
  input(type="submit" id="add" value="Add Ingredients!")

